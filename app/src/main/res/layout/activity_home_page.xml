<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E601"
    tools:context=".HomePage">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text12"
        android:layout_width="410dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:background="#9E645B"
        android:gravity="center"
        android:text="Contact List"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Show_button"
        android:layout_width="139dp"
        android:layout_height="51dp"
        android:layout_marginTop="76dp"
        android:background="#6634CE"
        android:onClick="Contacts"
        android:text="View Contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text12" />

    <Button
        android:id="@+id/Add_button"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginBottom="256dp"
        android:background="#E7025C"
        android:onClick="Add_Contact"
        android:text="Add Contacts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Show_button"
        app:layout_constraintVertical_bias="0.373" />

    <Button
        android:id="@+id/Delete_button"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:background="#9C31B1"
        android:onClick="Delete_Contact"
        android:text="Delete Contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Add_button" />


</androidx.constraintlayout.widget.ConstraintLayout>